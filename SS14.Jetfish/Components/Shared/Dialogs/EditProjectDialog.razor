@using SS14.Jetfish.Components.Shared.Forms
@using SS14.Jetfish.Components.Shared.ProjectCards
<MudDialog Style="min-height: 420px; min-width: 460px">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Badge" Class="mr-3 mb-n1"/>
            @Dialog.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <ProjectForm @ref="_form" Model="@_model"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="Save">Save</MudButton>
    </DialogActions>
</MudDialog>