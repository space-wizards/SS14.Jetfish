@page "/teams/{teamId:guid}/roles"
@using SS14.Jetfish.Components.Shared.Grids

<SectionContent SectionName="page-title">Team Roles</SectionContent>
<BackButton Href="@($"/teams/{TeamId}")"/>
@if(Team == null)
{
    <MudProgressLinear Style="@(_initialized ? "display: none;" : "")" Color="Color.Primary" Indeterminate="true" Class="mb-7"/>
    <p>@(_initialized ? "Team not found" : "")</p>
    return;
}
<AuthorizeResource DisplayError="true" ResourceName="team roles page" Policy="@(nameof(Permission.TeamEdit))" Resource="@TeamId">
    <RoleDataGrid Team="Team"></RoleDataGrid>
</AuthorizeResource>