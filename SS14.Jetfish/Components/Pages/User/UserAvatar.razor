@using SS14.Jetfish.FileHosting.Model
<MudAvatar Color="Color.Transparent" Size="@Size" Class="@Class">
    @if (User != null || UserOverride != null)
    {
        if (Tooltip)
        {
            <MudTooltip Text="@GetTooltip()">
                <ContentImage Fluid="true" Type="FileType.Global" FileId="@UserProfilePicture()"></ContentImage>
            </MudTooltip>
        }
        else
        {
            <ContentImage Fluid="true" Type="FileType.Global" FileId="@UserProfilePicture()"></ContentImage>
        }
    }
    else
    {
        <MudSkeleton Height="200%" Width="100%"></MudSkeleton>
    }
</MudAvatar>
