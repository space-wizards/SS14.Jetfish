<MudAvatar Color="Color.Transparent" Size="@Size" Class="@Class">
    @if (User != null || UserOverride != null)
    {
        if (Tooltip)
        {
            <MudTooltip Text="@GetTooltip()">
                <MudImage Src="@UserProfilePictureLink()" Fluid="true"></MudImage>
            </MudTooltip>
        }
        else
        {
            <MudImage Src="@UserProfilePictureLink()" Fluid="true"></MudImage>
        }
    }
    else
    {
        <MudSkeleton Height="200%" Width="100%"></MudSkeleton>
    }
</MudAvatar>
