<MudNavMenu Style="display: flex; flex-direction: column; height: 100%;">
    <MudStack Row="true" Justify="Justify.Center" Class="ma-4">
        <MudImage Style="image-rendering: smooth" Src="images/ss14_logo_omni_web_thick_lines.svg" Alt="SS14 Logo" Height="52" Width="52"/>
        <MudText HtmlTag="h1" Class="font-site-title" Typo="Typo.h4">Jetfish</MudText>
    </MudStack>
    <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
    <AuthorizeResource DisplayError="false" Policy="@(nameof(Permission.ProjectRead))">
        <MudNavLink Href="/projects" Match="NavLinkMatch.Prefix">Projects</MudNavLink>
    </AuthorizeResource>
    <AuthorizeResource DisplayError="false" Policy="@(nameof(Permission.TeamRead))">
        <MudNavLink Href="/teams" Match="NavLinkMatch.Prefix">Teams</MudNavLink>
    </AuthorizeResource>
    <MudNavGroup Title="Admin" Expanded="true" Class="nav-group-hide-empty">
        <AuthorizeResource DisplayError="false" Policy="@(nameof(Permission.PoliciesRead))">
            <MudNavLink Href="/admin/idp-roles" Match="NavLinkMatch.Prefix">Idp Roles</MudNavLink>
            <MudNavLink Href="/admin/policies" Match="NavLinkMatch.Prefix">Policies</MudNavLink>
        </AuthorizeResource>
    </MudNavGroup>
